<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    >
                    <View
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lock"
                            android:layout_gravity="center"
                            android:tint="@color/orange_app"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="  jacob_w "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange_app"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/downarrow"
                            android:layout_gravity="center"
                            app:tint="@color/orange_app"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/hamburger"
                        android:tint="@color/orange_app"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="start"
                        android:src="@drawable/person1opened"
                        android:contentDescription="profile_image_desc"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_shape" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/posts_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="54"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/posts_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posts"
                                android:textSize="14sp"
                                android:layout_gravity="center" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/followers_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="834"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/followers_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:textSize="14sp"
                                android:layout_gravity="center" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="12dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/following_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="162"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/following_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Following"
                                android:textSize="14sp"
                                android:layout_gravity="center" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jacob West"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="start" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Digital Goodies Designer"
                    android:textSize="15sp"
                    android:layout_gravity="start" />

                    <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" @pixsellz "
                    android:textColor="@color/verified_blue"
                    android:textSize="15sp"
                    android:layout_gravity="start" />

                </LinearLayout>

                <TextView
                    android:id="@+id/bio"
                    android:layout_marginTop="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everything is designed"
                    android:textSize="15sp"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/edit_profile_button"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Edit Profile"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:textColor="@color/orange_app"
                    android:textStyle="bold"
                    />

                <HorizontalScrollView
                    android:id="@+id/stories_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topbar"
                    android:paddingTop="8dp"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="story_cd"
                                android:padding="4dp"
                                android:background="@drawable/newhighlight"
                                android:layout_gravity="center"
                                app:tint="@color/orange_app" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New"
                                android:textColor="@color/orange_app"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/highlight1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="story_cd"
                                android:padding="4dp"
                                android:background="@drawable/highlight1"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Travel"
                                android:textColor="@color/orange_app"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="story_cd"
                                android:padding="4dp"
                                android:background="@drawable/highlight2"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Photography"
                                android:textColor="@color/orange_app"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:contentDescription="story_cd"
                                android:padding="4dp"
                                android:background="@drawable/highlight3"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food"
                                android:textColor="@color/orange_app"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>
                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/tab_posts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:tint="@color/orange_app"
                    android:padding="16dp"
                    android:gravity="center"
                    android:src="@drawable/grid"
                    android:background="@color/white"/>

                <ImageView
                    android:id="@+id/tab_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:tint="@color/orange_app"
                    android:padding="16dp"
                    android:gravity="center"
                    android:src="@drawable/tag"
                    android:background="@color/light_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/posts_grid"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_1"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_2"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_3"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_4"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_5"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_6"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_7"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_8"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_9"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/tagged_grid"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_10"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_11"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:src="@drawable/image_12"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>